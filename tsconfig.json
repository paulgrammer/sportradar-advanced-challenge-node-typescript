{
  "compilerOptions": {
    "target": "ESNext",  
    "lib": ["ESNext"],                        
    "module": "commonjs",             
    "moduleResolution": "node",                   
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    // "strict": true,      
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
